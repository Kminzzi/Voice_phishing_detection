<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_callLog">

    <fragment
        android:id="@+id/navigation_callLog"
        android:name="com.example.YourVoice.ui.CallLog.CallLogFragment"
        android:label="@string/title_callLog"
        tools:layout="@layout/fragment_calllog">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/calibri"
            android:padding="15dp"
            android:text="@string/title_callLog"
            android:textAlignment="center"
            android:textColor="#868296"
            android:textSize="25sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#dee2e6" />

    </LinearLayout></fragment>

    <fragment
        android:id="@+id/navigation_record"
        android:name="com.example.YourVoice.ui.Record.RecordFragment"
        android:label="@string/title_record"
        tools:layout="@layout/fragment_record" />

    <fragment
        android:id="@+id/navigation_list"
        android:name="com.example.YourVoice.ui.List.AddressFragment"
        android:label="@string/title_list"
        tools:layout="@layout/fragment_address" />

    <fragment
        android:id="@+id/navigation_myPage"
        android:name="com.example.YourVoice.ui.MyPage.MyPageFragment"
        android:label="@string/title_myPage"
        tools:layout="@layout/fragment_mypage" />

</navigation>